<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.ccar"
    android:versionCode="1"
    android:versionName="1.0">
    <uses-sdk android:targetSdkVersion="10" 
        android:minSdkVersion="9" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>

	<uses-feature android:glEsVersion="0x00020000" android:required="true"/> 
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

    <application android:name=".app.CCARApplication" 
        android:icon="@drawable/ic_launcher" 
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".SpotListActivity"
		    	  android:label="@string/spotlist"></activity>
		<activity android:name=".ARActivity"
		    	  android:label="@string/AR"
		    	  android:screenOrientation="landscape"></activity>
		<activity android:name=".NavigationActivity"
		    	  android:label="@string/navigation"
		    	  android:configChanges="orientation"></activity>
		<activity android:name=".SpotInfoActivity"
		    	  android:label="@string/spotinfo"></activity>
    </application>

</manifest>